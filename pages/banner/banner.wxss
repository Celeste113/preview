/* pages/banner/banner.wxss */

page {
  background: #f2f2f2;
}

.item {
  /* box-shadow: 10rpx 6rpx 24rpx #a1a1a1; */
  border-radius:8rpx;
  margin: 0 10rpx;
  margin-top: 40rpx;
  overflow: hidden;
}

.title {
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #e3e3e3;
  color: #525252;
  background: #fff;
}

.slide-image {
  position: absolute;
  height: 225rpx;
  width: 550rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 13%;
  margin: 0 20rpx;
}

swiper {
  height: 430rpx;
  background: #fff;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 280rpx;
  width: 550rpx;
  top: 7%;
  transition: all 0.2s ease-in 0s;
}

.van-cell__label {
  font-size: 35rpx !important;
  box-sizing: border-box;
  padding: 20rpx;
}
.vertical-swiper{
  height:360rpx;
}
