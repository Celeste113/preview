/* pages/index/index.wxss */

page {
  background: #f2f2f2;
}

#index {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.my-notice-bar {
  border-radius: 40rpx;
  height: 70rpx;
  margin-top: 18rpx;
  padding-left: 30rpx;
}

.action-btn {
  margin-top: 34rpx;
  font-size: 30rpx;
  color: #808080;
  padding: 0 10rpx;
}

.btn-group {
  float: right;
}

.btn-group text {
  display: inline-block;
  margin: 0 10rpx;
}

.bannerList {
  width: 100%;
  height: 830rpx;
  position: relative;
}

.bannerbox {
  width: 100%;
  height: 830rpx;
  border-radius: 20rpx;
  position: relative;
  margin-top: 53rpx;
}

.bannerbox>view {
  width: 100%;
  height: 830rpx;
  position: absolute;
  border-radius: 20rpx;
  overflow-x: hidden;
}

.bannerbox .topbox {
  z-index: 10000;
  top: 15rpx;
  width: 100%;
  left: 0rpx;
}

.bannerbox .top {
  z-index: 100;
  top: 0rpx;
  width: 99%;
  left: 0rpx;
  transition: all 0.4s ease-in;
  opacity: 1;
}

.bannerbox .center {
  width: 95%;
  z-index: 60;
  top: -15rpx;
  left: 2.5%;
  transition: all 0.4s ease-in;
}

.bannerbox .bottom {
  width: 85%;
  z-index: 20;
  top: -30rpx;
  left: 7.5%;
  transition: all 0.4s ease-in;
}

.slide-image {
  z-index: 100;
  border-radius: 20rpx;
  overflow: hidden;
}

.slide-image image {
  width: 100%;
  height: 100%;
}

.red-packet {
  width: 100%;
  height: 80%;
  background: #fff;
  padding: 33rpx 24rpx 0 24rpx;
  box-sizing: border-box;
  position: absolute;
  border-radius: 20rpx;
  overflow: hidden;
}

.packet-name {
  color: #ff5e62;
  font-size: 38rpx;
  margin-top: 40rpx;
}

.red-packet .packet-image {
  width: 100%;
  height: 340rpx;
  border-radius: 20rpx;
}

.red-packet .packet-image image {
  width: 100%;
  height: 100%;
}

.sponsor {
  margin-top: 10rpx;
  color: #333;
  font-size: 28rpx;
}

.info {
  margin-top: 10rpx;
}

.info>view {
  width: 100%;
  justify-content: space-between;
  display: flex;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #333;
}

.info>view>text:first-child {
  color: #999;
}

.Couplets {
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
  padding: 25rpx 10rpx;
  box-sizing: border-box;
}

.desc text {
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
}

.desc view {
  margin-top: 5rpx;
  color: #333;
  font-size: 24rpx;
}
